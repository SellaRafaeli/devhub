<%
  comments = $comments.find(post_id: post['_id'], parent_id: nil)
%>



<div class="container-fluid">
    <%= erb :'posts/single_post', locals: {post: post} %>

    <h3> Comments </h3>
    <ul class="list-group">
      <% comments.each do |comment| %>
        <%= erb :'comments/single_comment', locals: {comment: comment, post: post} %>        
      <% end %>
    </ul>

    <form method='post' action='/comments/submit'>
      <h4>Comment</h4>
      <input type='hidden' name='post_id' value=<%=post['_id']%>>
      <textarea name='text' onkeydown=suggestLogin()></textarea>
      <button>submit</button>
    </form>
</div>